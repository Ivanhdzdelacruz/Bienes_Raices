<%= form_for @property_photo, :html => { :class => "form-horizontal property_photo" } do |f| %>

  <% if @property_photo.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@property_photo.errors.count, "error") %> prohibited this property_photo from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @property_photo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :source, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :source, :class => 'form-control' %>
    </div>
    <%=f.error_span(:source) %>
  </div>
  <div class="form-group">
    <%= f.label :caption, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :caption, :class => 'form-control' %>
    </div>
    <%=f.error_span(:caption) %>
  </div>
  <div class="form-group">
    <%= f.label :property_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :property_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:property_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                property_photos_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
